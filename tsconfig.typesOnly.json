{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "@types",
		"outDir": "./dist",
		"rootDir": "./src",
		"outFile": "@types/index.d.ts",
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"strictPropertyInitialization": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
